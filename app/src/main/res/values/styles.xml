<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InputStyle">
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InputBox">
        <item name="android:layout_marginTop">@dimen/margin_min</item>
        <item name="android:layout_marginBottom">@dimen/margin_min</item>
        <item name="android:layout_marginStart">@dimen/margin_min</item>
        <item name="android:layout_marginEnd">@dimen/margin_min</item>
        <item name="android:layout_marginRight">@dimen/margin_min</item>
        <item name="android:layout_marginLeft">@dimen/margin_min</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

   <style name="Picker">
        <item name="android:layout_width">@dimen/picker_width</item>
        <item name="android:layout_height">@dimen/picker_height</item>
    </style>

</resources>
